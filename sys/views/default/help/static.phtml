.help .help_title{clear: both; overflow: hidden; border-bottom: 1px solid #ddd; line-height: 40px; color: #666; font-size: 16px; font-weight: bold; position: relative;}
.help .help_title span{display: block; width: 200px; height: 1px; background-color: #43ac2d; position: absolute; bottom: 0; left: 40%;}
