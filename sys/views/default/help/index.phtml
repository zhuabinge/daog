<script type="text/javascript">
$('#help > li').click(function(){
  $(this).addClass("cur").siblings().removeClass();
});
$('#help > li > span').click(function(){
  var tab = $(this).attr('ltab');
  $('.tab').siblings().removeClass("on");
  $('#con' + tab).addClass("on");
});
$('#helpcontent > dt').click(function(){
  $(this).addClass("on").siblings().removeClass();
  $(this).find('i').removeClass().addClass("icon-caret-down");
  $(this).siblings().find('i').addClass("icon-caret-right");
});
</script>
