<style type="text/css">
.hidden{display: none;}
.static{clear: both; overflow: hidden; padding: 20px;}
.static .static_fl{float: left; width: 175px; overflow: hidden;}
.static .static_fl ul li{margin: 10px 0 0; border-right: 0; text-align: center; position: relative;}
.static .static_fl ul li a{display: block; height: 36px; line-height: 36px; border: 1px solid #cdcdcd; background: url(/static/default/images/help_bg1.png) repeat-x; font-size: 14px; font-weight: bold; margin-bottom: 10px;}
.static .static_fl ul li a .icon-caret-right{margin-right: 5px; font-size: 16px;}
.static .static_fl ul li a:hover{text-decoration: none; color: #fff; background: url(/static/default/images/help_bg2.png) repeat-x;}
.static .static_fl ul li .icon-caret-down{display: none; font-size: 16px;}
.static .static_fl ul .cur .icon-caret-down{position: absolute; top: 31px; left: 84px; display: block; color: #ff9410;}
.static .static_fl ul li span{display: none; font-weight: bold; height: 30px; line-height: 30px; font-size: 14px; color: #707070; cursor: pointer;}
.static .static_fl ul .cur a{border-right: 0; color: #fff; background: url(/static/default/images/help_bg2.png) repeat-x;}
.static .static_fl ul .cur span{display: block;}

.static .static_fr{min-height:400px; border-left: 1px solid #cdcdcd; width: 734px; margin: 10px 0 0; padding: 0 0 0 30px; float: right;}
.static .static_fr .title_top{border-bottom: 1px solid #ddd; height: 36px; line-height: 36px; font-size: 14px; font-weight: bold; color: #666; padding: 0 5px; clear: both; overflow: hidden;}
.static .static_fr dl{padding: 10px; clear: both; overflow: hidden;}
.static .static_fr dl dt{float: left; width: 357px; line-height: 30px; overflow: hidden;}
.static .static_fr dl dt i{color: #ff8800; font-size: 16px; margin: 0 5px 0 0;}
.static .static_fr dl dt a:hover{text-decoration: none;}
.static .static_fr dl dt .content{width: 330px; overflow: hidden; padding: 0 0 0 15px; display: none; color: #999;}
.static .static_fr dl dt .content strong{color: #ff8800;}
.static .static_fr dl .on .content{display: block;}
.tab{display: none;}
.on{display: block;}
</style>
{/literal}
