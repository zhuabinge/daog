<script type="text/javascript">
function isEmpy(str) {
  if ( str == '' || str == null) return true;
  var regu = '^[ ]+$';
  var re = new RegExp(regu);
  return re.test(str);
}
$(document).ready(function() {
  $('.sale-ul > li > a').click(function() {
{if isLogin()}
  {if isset($auth) && $auth == 1}
      dialog('<h1>很抱歉，您已经许过愿望了！</h1><a href="{url('')}" class="button close">去逛逛双12</a>').open();
  {else}
      var pid = $(this).attr('data-pid'), code = $(this).attr('data-code');
      var dlog;
      dlog = dialog([
        '<div class="text-logo"></div>',
        '<textarea class="dream-text" name="content" id="pub_content" maxlength="70"></textarea>',
        '<div class="words-count" style="color:#393939">限<em class="cur" id="Num">0</em>/<span>70</span>字</div>',
        '<div class="dream-input"><div class="input-item"><label>姓名：</label><input type="text" name="nickname" value=""/></div>',
        '<div class="input-item"><label>电话：</label><input type="text" name="telphone" value=""/></div>',
        '<div class="input-item"><label>地址：</label><input type="text" name="address" value=""/></div></div>',
        '<input type="button" class="button" value="确认提交">'
      ].join(' '));
      dlog.open(function() {
        var numNow = 0;
        var textLong;
        function addListener(element,e,fn){
          if(element.addEventListener){
            element.addEventListener(e,fn,false);
          } else {
            element.attachEvent("on" + e,fn);
          }
        }
        var Textarea = document.getElementById("pub_content");
        addListener(Textarea,"keyup", function(){
          var Value = document.getElementById("pub_content").value;
          if(Value.length >= 70){
            Value = document.getElementById("pub_content").innerHTML = Value.substr(0,70);
          }
          if( numNow >= 0 && numNow <= 70){
            document.getElementById("Num").innerHTML = Value.length;
          }
        });
        $('.button').click(function(e){
          var nickname = $('input[name="nickname"]').val(), telphone = $('input[name="telphone"]').val(),
              address = $('input[name="address"]').val(), content = $('textarea[name="content"]').val();
          var reg = new RegExp("^[0-9]*$");
          if(!reg.test(telphone)){  
            alert('电话号码只能是数字！');
            e.preventDefault();
            return;
          }
          if (isEmpy(nickname) || isEmpy(address) || isEmpy(telphone) || isEmpy(content) || isEmpy(code) || isEmpy(pid)) {
            alert('留言内容，姓名，电话，地址不能为空！');
            e.preventDefault();
            return;
          };
          $.post('{url('topic/yuanwang.html')}', { pid:pid, code:code, nickname:nickname, telphone:telphone, address:address, content:content }, function(data) {
              var data = data.result;
              if (data == -1) {
                dialog('<h1>许愿失败，请重试！</h1><input type="button" class="button close" value="我知道了">').open();
              } else if (data == -2) {
                dialog('<h1>很抱歉，您已经许过愿望了！</h1><input type="button" class="button close" value="去首页逛逛">').open();
              } else if (data == 1) {
                dlog.close();
                dialog('<h2>亲，感谢您写下2015年愿望，动动手指分享微博并<a href="http://weibo.com/u/5319602800?topnav=1&wvr=6&topsug=1"  target="_blank"><b>@海萍天天逛逛企业微博</b></a>就可以获得免费领取奖品的机会了~</h2><a href="http://service.weibo.com/share/share.php?url=http%3A%2F%2Fwww.ttgg.com%2Ftopic%2Fyuanwang.html%3Fpage%3D1%230-tsina-1-16415-397232819ff9a47a7b7e80a40613cfe1&title=%E8%AE%B8%E4%B8%8B%E6%84%BF%E6%9C%9B%EF%BC%8C%E8%B5%A2%E5%8F%96%E8%B6%85%E5%80%BC%E5%A4%A7%E7%A4%BC%E5%8C%85%20-%20%E5%A4%A9%E5%A4%A9%E9%80%9B%E9%80%9B%E5%B0%B1%E6%98%AF%E8%BF%99%E4%B9%88%E4%BB%BB%E6%80%A7%EF%BC%81&appkey=1343713053&searchPic=false&pic=http://www.ttgg.com/static/default/images/topic/banner_1212.jpg&searchPic=false" target="_blank" class="button close">分享微博</a>').open();
              };
          }, 'json');
        });
      });
  {/if}
{else}
    dialog('<h1>请先登录后再许愿！</h1><a href="{url('user/login')}" class="button close">马上登陆</a>').open();
{/if}
  });
  // $('#myTabContent').remove();

  /**去掉右侧导航**/
  $('.side-panel').remove();
});
</script>
